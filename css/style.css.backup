/* Icon styles */
.icon-wrapper {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    margin-right: 12px;
}

.icon-wrapper svg {
    width: 24px;
    height: 24px;
    fill: white;
}

.service-card h3 .icon-wrapper {
    margin-right: 10px;
    width: 40px;
    height: 40px;
}

.service-card h3 {
    display: flex;
    align-items: center;
}

/* Enhanced card hover with glow */
.service-card:hover {
    transform: translateY(-10px);
    border-color: var(--primary);
    box-shadow: 0 10px 40px rgba(0, 92, 255, 0.3), 0 0 20px rgba(0, 92, 255, 0.2);
}

/* Gradient backgrounds for portfolio */
.portfolio-icon {
    height: 200px;
    border-radius: 12px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
}

.portfolio-icon svg {
    width: 80px;
    height: 80px;
    fill: white;
    z-index: 1;
}

.portfolio-icon::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transform: rotate(45deg);
    animation: shine 3s infinite;
}

@keyframes shine {
    0% {
        transform: translateX(-100%) translateY(-100%) rotate(45deg);
    }

    100% {
        transform: translateX(100%) translateY(100%) rotate(45deg);
    }
}

/* Number badges */
.number-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    font-weight: 700;
    font-size: 1.2rem;
    margin-right: 12px;
}

/* Pricing badge */
.pricing-badge {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
    padding: 8px 16px;
    border-radius: 20px;
    display: inline-block;
    margin-bottom: 10px;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* Form improvements */
input,
select,
textarea {
    transition: all 0.3s;
}

input:focus,
select:focus,
textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(0, 92, 255, 0.1);
}

/* Smooth page transitions */
body {
    animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}